@model IEnumerable<EventoTec.web.Models.entities.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "CLients";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
