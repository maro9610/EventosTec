@model IEnumerable<EventoTec.web.Models.entities.Event>
@{
    ViewData["Title"] = "Index";
}
<div class="item active">
    <img src="https://www.divulgaciondinamica.es/wp-content/uploads/2019/10/tipos-de-eventos-clasificacion.jpg" alt="ASP.NET" class="img-responsive" width="500" height="500" />

</div>
<h2>Eventos</h2>
@if (User.IsInRole("Client"))
{
    <p>
        <a asp-action="Create" class="btn btn-sm btn-primary">Crear Evento</a>
    </p>
}
else if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="CreateEvent" class="btn btn-sm btn-primary">Crear Evento</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Picture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.People)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
